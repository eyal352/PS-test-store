<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <!-- Add menu in the sidebar with sort order -->
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-your-first-link">
                <arguments>
                    <argument name="path" xsi:type="string">customer/account/refer</argument>
                    <argument name="label" xsi:type="string">My Referrals</argument>
                    <argument name="sortOrder" xsi:type="number">250</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
